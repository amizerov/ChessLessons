@using chess5.Models
@model RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="modal__form__title">
        <span>Регистрация</span>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", id = "ContentEmailRegister", autocomplete = "new-email" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль", id = "ContentPasswordRegister", autocomplete = "new-password" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Подтверждение пароля", id = "ContentConfirmPasswordRegister", autocomplete = "new-password" })
    </div>
    <div class="submit-container">
        <button class="btn btn-primary" type="submit" value="Register">Регистрация</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
